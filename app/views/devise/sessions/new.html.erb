

<html>
  <head>

  </head>
  <style>
    * {box-sizing: border-box}

    /* Full-width input fields */
    input[type=text], input[type=password] {
      width: 100%; 
      margin-top: 5px;
      padding: 15px;
      display: inline-block;
      border: none;
      background: var(--light-gray-background);
    }

    input[type=text]:focus, input[type=password]:focus {
      background-color: #ddd;
      outline: none;
    }
    
    .field-with-errors {
      display: flex;
      flex-direction: column;
      width: 100%; 
    }

    .error-message {
        color: red;
        font-size: 14px;
        margin-top: 2px; 
      margin-left: 5px;
      padding: 0;
    }
  </style>

  <body>
    <div class="header">
  <%= link_to "URM Machines", root_path, style: "color: white; text-decoration: none;" %>
</div>
    <div style="display: flex;height: 100vh; justify-content:center;
 align-items:center;  flex-direction:column;  
     width: 100%; ">
          
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),
       html: { method: :post,  style: "width: 30%;"  }) do |f| %>
        <h1>Вход</h1>
       
        <p style="font-size:18px;">Пожалуйста, заполните эту форму, чтобы войти в свою учетную запись.</p>
       
        <div class="field-container">
          <%= f.label :email, "E-mail" %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Введите ваш e-mail"  %>
        </div>
        
        <div class="field-container">
          <%= f.label :password, "Пароль" %>
          <%= f.password_field :password, placeholder: "Введите пароль" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Запомнить меня" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Войти", class: " auth-button" %>
        </div>
        
        <div class="clarification-field">
          <%= link_to "Создать учетную запись", new_user_registration_path, method: :get, style: "color: dodgerblue;" %>
        </div>
      <% end %>

      </div>


</div>
  </body>
</html>
