<html>
  <head>

  </head>
  <style>
    * {box-sizing: border-box}

    /* Add padding to containers */
    .container {
      padding: 16px;
    }

    /* Full-width input fields */
    input[type=text], input[type=password] {
      margin-top: 5px;
      padding: 15px;
      display: inline-block;
      border: none;
      background: var(--light-gray-background);
    }

    input[type=text]:focus, input[type=password]:focus {
      background-color: #ddd;
      outline: none;
    }
    .register-button {
      padding: 16px 20px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      background-color: var(--bright-blue);
      color: white;
      font-size: 15px;
      width: 100%; 
    }

    .register-button:hover {
          background-color: rgb(0, 98, 203);
      }
      .register-button:active {
          background-color: rgb(0, 75, 156);
      }

    /* Add a blue text color to links */
    a {
      color: dodgerblue;
    }

    .field-container{
      display: flex; 
      flex-direction: column;
      width: 100%; 
      font-size: 18px;
      margin: 5px 0 22px 0;

    }

    /* Set a grey background color and center the text of the "sign in" section */
    .signin {
      background-color: #f1f1f1;
      text-align: center;
    }

    .sublabel {
      font-size: 13px; /* Размер шрифта для sublabel */
      color: rgb(100, 100, 100); /* Цвет для sublabel */
      margin-top: 2px; 
      margin-left: 5px;
      padding: 0;
    }
  </style>

  <body>
    <div style="display: flex;height: 100vh; justify-content:center;
 align-items:center;  flex-direction:column;  
     width: 100%; ">

          
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
       html: { method: :post,  style: "width: 30%;"  }) do |f| %>
        <h1>Регистрация</h1>
       
        <p style="font-size:18px;">Пожалуйста, заполните эту форму, чтобы создать учетную запись.</p>
        <% if resource.errors.any? %>
          <div id="error_explanation">
            <h2>Ошибка не позволила сохранить пользователя:</h2>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field-container" >
          <%= f.label :name, "Имя" %>
          <%= f.text_field :name, placeholder: "Введите ваше имя" %>
        </div>
        <div class="field-container">
          <%= f.label :email, "E-mail" %>
          <%= f.text_field :email, placeholder: "Введите ваш e-mail"  %>
        </div>
        
        <div class="field-container">
          <%= f.label :password, "Пароль" %>
          <%= f.password_field :password, placeholder: "Введите пароль" %>
          <div class="sublabel">Пароль должен содержать минимум 6 символов.</div>       
        </div>
        <div class="field-container">
          <%= f.label :password_confirmation, "Повторите пароль" %>
          <%= f.password_field :password_confirmation, placeholder: "Введите пароль ещё раз"  %>
          <div class="sublabel">Введите тот же пароль для подтверждения.</div>
        </div>
        <div >
          <%= f.submit "Зарегистрироваться", class: " register-button" %>
        </div>
        
        <div class="container signin">
          <p>У вас уже есть учетная запись? <%= link_to "Войти", new_user_session_path, method: :get %>.</p>
        </div>
      <% end %>

      </div>


</div>
  </body>
</html>