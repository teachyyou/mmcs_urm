<html>
  <head>

  </head>
  <style>
    * {box-sizing: border-box}

    /* Full-width input fields */
    input[type=text], input[type=password] {
      width: 100%; 
      margin-top: 5px;
      padding: 15px;
      display: inline-block;
      border: none;
      background: var(--light-gray-background);
    }

    input[type=text]:focus, input[type=password]:focus {
      background-color: #ddd;
      outline: none;
    }
    
    .field-with-errors {
      display: flex;
      flex-direction: column;
      width: 100%; 
    }

    .error-message {
        color: red;
        font-size: 14px;
        margin-top: 2px; 
      margin-left: 5px;
      padding: 0;
    }
  </style>

  <body>
    <div class="header">
  <%= link_to "URM Machines", root_path, style: "color: white; text-decoration: none;" %>
</div>
    <div style="display: flex;height: 100vh; justify-content:center;
 align-items:center;  flex-direction:column;  
     width: 100%; ">

          
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
       html: { method: :post,  style: "width: 30%;"  }) do |f| %>
        <h1>Регистрация</h1>
       
        <p style="font-size:18px;">Пожалуйста, заполните эту форму, чтобы создать учетную запись.</p>
       
        <div class="field-container" >
          <%= f.label :name, "Имя" %>
          <%= f.text_field :name, placeholder: "Введите ваше имя" %>
          <% if f.object.errors[:name].any? %>
            <div class="error-message"><%= f.object.errors[:name].first %></div>
          <% end %>
        </div>
        <div class="field-container">
          <%= f.label :email, "E-mail" %>
          <%= f.text_field :email, placeholder: "Введите ваш e-mail"  %>
          <% if f.object.errors[:email].any? %>
            <div class="error-message"><%= f.object.errors[:email].find{|message| message != "can't be blank"} %></div>
          <% end %>
        </div>
        
        <div class="field-container">
          <%= f.label :password, "Пароль" %>
          <%= f.password_field :password, placeholder: "Введите пароль" %>
          <% if f.object.errors[:password].any? %>
            <div class="error-message"><%= f.object.errors[:password].find{|message| message != "can't be blank"} %></div>
          <% else %>
            <div class="sublabel">Пароль должен содержать минимум 6 символов.</div>       
          <% end %>
        </div>
        <div class="field-container">
          <%= f.label :password_confirmation, "Повторите пароль" %>
          <%= f.password_field :password_confirmation, placeholder: "Введите пароль ещё раз"  %>
          <% if f.object.errors[:password_confirmation].any? %>
            <div class="error-message"><%= f.object.errors[:password_confirmation].first %></div>
          <% else %>
            <div class="sublabel">Введите тот же пароль для подтверждения.</div>
          <% end %>
        </div>
        <div >
          <%= f.submit "Зарегистрироваться", class: " auth-button" %>
        </div>
        
        <div class="clarification-field">
          <p>У вас уже есть учетная запись? <%= link_to "Войти", new_user_session_path, method: :get, style: "color: dodgerblue;" %>.</p>
        </div>
      <% end %>

      </div>


</div>
  </body>
</html>